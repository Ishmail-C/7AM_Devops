pipeline {
        agent any
        stages{
            stage('System details'){
                steps{
                  sh '''
                    echo -e "\n"
                    echo -e "system details:"
                    echo -e "\n"
                    uname -a
                    '''
            }
        }
	stage('memory details'){
		steps{
		sh '''
		echo -e "\n"
		echo -e "memory details:"
		echo -e "\n"
		free
		'''
		}
	}		
     }
} 
